<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="56dp"
    android:layout_height="46dp"
    tools:parentTag="android.widget.RelativeLayout">


    <!-- 구간 선택 백그라운드 View -->
    <View
        android:id="@+id/day_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/day_select_range_color"
        android:padding="0dp" />

    <!-- 단일 및 시작과 끝 백그라운드는 TextView에 -->
    <TextView
        android:id="@+id/day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:text="31" />

    <TextView
        android:id="@+id/day_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/day_sub_text_color"
        android:textSize="7sp"
        tools:text="120,000" />

</merge>
